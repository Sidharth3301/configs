set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
bindsym $mod+Shift+p mode "$mode_system"
mode "$mode_system" {
    bindsym l exec --no-startup-id /home/sid/.scripts/i3exit lock, mode "default"
    bindsym e exec --no-startup-id /home/sid/.scripts/i3exit logout, mode "default"
    bindsym s exec --no-startup-id /home/sid/.scripts/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id /home/sid/.scripts/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id /home/sid/.scripts/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id /home/sid/.scripts/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
